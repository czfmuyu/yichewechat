/* pages/selectmodel/selectmodel.wxss */
.searchAr{border-bottom-left-radius: 6rpx;border-top-left-radius: 6rpx;}
.input{border-bottom-right-radius: 6rpx;border-top-right-radius: 6rpx;}
page{height:100%;}
.model_box{
  height:100%;
  background: #fff;
  display: flex;
}
.model_left{
  flex: 1;
}
.model_right{
  width: 60rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}
.letter_item{
  flex: 1;
  display: block;
  font-size: 24rpx;
  color: #a0b3c2;
  text-align: center;
}
.model_first_letter{
  line-height: 60rpx;
  height: 60rpx;
  padding-left: 25rpx;
  font-size: 28rpx;
  background: #eee;
  color: #999;
}
.model_name{
  display: block;
  line-height: 80rpx;
  height: 80rpx;
  border-bottom: 1px solid #efefef;
  font-size: 28rpx;
  color: #333;
  padding-left: 25rpx;
}
::-webkit-scrollbar {
  width: 0;
  height: 0;
  color: transparent;
}
.carname{
  left:0rpx;
  top:55rpx;
}
.modal-mask {
  width: 100%;
  height: 100%;
  position: fixed;
  top: 0;
  left: 0;
  background: #000;
  opacity: 0.5;
  overflow: hidden;
  z-index: 9000;
  color: #fff;
}
.modeldetail{
   z-index: 9999;
   height: 100%;
   top: 0;
   right: 0;
}
.mbg{background-color:#dededc;}